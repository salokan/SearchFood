<Page 
    x:Class="SearchFood.View.Search" 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" >
    <Page.Resources>
        <x:String x:Key="AppName">Search Food</x:String>
    </Page.Resources>
    <Grid>
        <Grid DataContext="{Binding Main, Source={StaticResource Locator}}" Height="140" Background="Teal" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Margin="39,0,39,0" Command="{Binding NavigationHelper.GoBackCommand, ElementName=pageRoot}"
                        Style="{StaticResource NavigationBackButtonNormalStyle}" VerticalAlignment="Center" AutomationProperties.Name="hi"
                        AutomationProperties.AutomationId="BackButton" AutomationProperties.ItemType="Navigation Button"/>
            <TextBlock Text="{StaticResource AppName}" Style="{StaticResource HeaderTextBlockStyle}" Grid.Column="1" 
                        IsHitTestVisible="false" TextWrapping="NoWrap" VerticalAlignment="Center"/>
            <StackPanel HorizontalAlignment="Right" Grid.Column="1" VerticalAlignment="Center" Orientation="Horizontal" Visibility="{Binding Visibility, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                <StackPanel Orientation="Vertical">
                    <Button  Command="{Binding Path=PopupOpenCommande}" Height="100" Width="100" VerticalAlignment="Center" BorderThickness="0" BorderBrush="Teal" Padding="0">
                        <Image Source="/Image/Sasuke.jpeg" Stretch="Fill" Height="100" Width="100"/>
                    </Button>
                    <Popup IsOpen="{Binding PopupOpen}">
                        <Grid Background="Teal" Width="120" Height="75">
                            <StackPanel Orientation="Vertical">
                                <Button Content="Mon Profil"  Width="120"/>
                                <Button Content="Deconnexion" Width="120" Command="{Binding LogoutCommand}"/>
                            </StackPanel>
                        </Grid>
                    </Popup>
                </StackPanel>
                <TextBlock FontSize="40" Text="Visibility" TextAlignment="Center" VerticalAlignment="Center" Margin="0,0,30,0"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Right" Grid.Column="1" VerticalAlignment="Center" Orientation="Horizontal" Visibility="{Binding InverseVisibility, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                <Button  Command="{Binding Path=LoginCommand}" Content="Connexion" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <Button  Command="{Binding Path=CreateAccountCommand}" Content="Créer un Compte" VerticalAlignment="Center" Margin="0,0,10,0"/>
            </StackPanel>
        </Grid>
        <Grid Margin="0,140,0,0" DataContext="{Binding Search, Source={StaticResource Locator}}">
            <StackPanel Orientation="Horizontal" Height="80" VerticalAlignment="Top">
                <TextBlock Text="Recherche" FontSize="32" VerticalAlignment="Center" Margin="20,0,0,0"/>
                <TextBox VerticalAlignment="Center" Width="300" Margin="20,0,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
